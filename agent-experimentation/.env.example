# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=project_management
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

CHROMADB_PATH=./chromadb

# Atlassian Configuration
JIRA_URL=https://your-company.atlassian.net
JIRA_USERNAME=your-email@company.com
JIRA_API_TOKEN=your_jira_api_token

CONFLUENCE_URL=https://your-company.atlassian.net/wiki
CONFLUENCE_USERNAME=your-email@company.com
CONFLUENCE_API_TOKEN=your_confluence_api_token

TEMPO_API_TOKEN=your_tempo_api_token

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.1

# Scheduling
INGESTION_TIME=06:00
TIMEZONE=UTC

# Alert Settings
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@company.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=alerts@company.com

SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

STALLED_TICKET_DAYS=5

# Security
JWT_SECRET_KEY=your_super_secret_jwt_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Application Configuration
APP_NAME=Project Management Dashboard
DEBUG=true
# Note: For React development, these should NOT be set in .env
# HOST=0.0.0.0  # This conflicts with React dev server - comment out
# PORT=8000     # Backend will use this, React uses 3000 by default
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]